# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/medical_ai_db
DB_NAME=medical_ai_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Redis & Celery
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440

# File Storage
MEDIA_ROOT=./media
MEDIA_URL=/media/
STATIC_ROOT=./static
STATIC_URL=/static/

# Cloud Storage (Optional - for production)
USE_CLOUD_STORAGE=False
GCP_PROJECT_ID=your-gcp-project-id
GCP_BUCKET_NAME=your-bucket-name
GCS_CREDENTIALS_PATH=./gcp-credentials.json

# AWS S3 (Alternative to GCP)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1

# ML Model Paths
SEGMENTATION_MODEL_PATH=../experiments/checkpoints/best_model.pth
LLM_MODEL_PATH=../models/medalpaca-7b
MODEL_DEVICE=cuda

# Performance Settings
MAX_UPLOAD_SIZE=1073741824
INFERENCE_TIMEOUT=300
MAX_CONCURRENT_JOBS=3

# Security
ENCRYPTION_KEY=your-encryption-key-here
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-here
ENABLE_MONITORING=False

# Email (for notifications - optional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password

# Application Settings
FRONTEND_URL=http://localhost:5173
API_VERSION=v1
